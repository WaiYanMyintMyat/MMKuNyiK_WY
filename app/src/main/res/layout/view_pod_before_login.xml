<?xml version="1.0" encoding="utf-8"?>
<com.example.waiyan.mmkunyik.views.pods.BeforeLoginViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loginimage"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A000"
        />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_medium_2"
        android:background="@color/primary"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_regular_2x"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_above="@+id/btnRegister"
        android:layout_alignRight="@+id/btnRegister"
        android:textAllCaps="false"
        android:background="@color/primary"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_regular_2x"/>
</com.example.waiyan.mmkunyik.views.pods.BeforeLoginViewPod>